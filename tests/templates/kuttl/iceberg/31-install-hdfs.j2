---
apiVersion: hdfs.stackable.tech/v1alpha1
kind: HdfsCluster
metadata:
  name: hdfs
spec:
  image:
{% if test_scenario['values']['hdfs-latest'].find(",") > 0 %}
    custom: "{{ test_scenario['values']['hdfs-latest'].split(',')[1] }}"
    productVersion: "{{ test_scenario['values']['hdfs-latest'].split(',')[0] }}"
{% else %}
    productVersion: "{{ test_scenario['values']['hdfs-latest'] }}"
{% endif %}
    pullPolicy: IfNotPresent
  clusterConfig:
    dfsReplication: 1
{% if lookup('env', 'VECTOR_AGGREGATOR') %}
    vectorAggregatorConfigMapName: vector-aggregator-discovery
{% endif %}
    zookeeperConfigMapName: hdfs-znode
  nameNodes:
    config:
      logging:
        enableVectorAgent: {{ lookup('env', 'VECTOR_AGGREGATOR') | length > 0 }}
    roleGroups:
      default:
        replicas: 2
  dataNodes:
    config:
      logging:
        enableVectorAgent: {{ lookup('env', 'VECTOR_AGGREGATOR') | length > 0 }}
    roleGroups:
      default:
        replicas: 1
  journalNodes:
    config:
      logging:
        enableVectorAgent: {{ lookup('env', 'VECTOR_AGGREGATOR') | length > 0 }}
    roleGroups:
      default:
        replicas: 1
---
apiVersion: zookeeper.stackable.tech/v1alpha1
kind: ZookeeperZnode
metadata:
  name:  hdfs-znode
spec:
  clusterRef:
    name: zookeeper
