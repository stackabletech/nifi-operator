---
apiVersion: zookeeper.stackable.tech/v1alpha1
kind: ZookeeperCluster
metadata:
  name: test-zk
spec:
  servers:
    roleGroups:
      default:
        replicas: 1
        config:
          myidOffset: 10
  version: {{ test_scenario['values']['zookeeper'] }}
  stopped: false
---
apiVersion: zookeeper.stackable.tech/v1alpha1
kind: ZookeeperZnode
metadata:
  name: test-nifi-znode
spec:
  clusterRef:
    name: test-zk
